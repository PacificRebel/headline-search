<!-- app/views/travel/index.html.erb -->
<center>
<head>

  <h1>
  <p><font face="Financier Display" color="black">Search the Financial Times for a headline</font></p></h1>
  </head>
<div class="container">

  <style>
    body {
      background-color: #FFF1E0;
    }
    </style>
  <div class="row">
    <div class="col-lg-12 mt-5">
      <% if flash[:alert] %>
        <div class="alert alert-warning"><%= flash[:alert] %></div>
      <% end %>
      <div class="mx-auto mt-5" style="width: 700px">
        <%= form_with(url: search_path, method: 'get', local: true) do %>
          <div class="form-group">

            <%= text_field_tag :headline, nil, placeholder: 'Eg. Climate', class: 'form-control' %>
            </div>
          
        <% end %>
      </div>
    </div>
  </div>
</div>
